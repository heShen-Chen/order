.slide-image{
  width:100%;
  height: 280rpx;
}
.menu-bar{
  display: flex;
  margin-top: 20rpx;
}
.menu-block{
  width:50%;
  display: flex;
  justify-content: center;
  margin: 0 auto;
}
.menu-start{
  text-align: center;
  font-size: 15rpx;
  padding: 5rpx 20rpx;
  color: #fff;
  background: #ff9c35;
  border-radius: 20rpx;
  width: 150rpx;
}
/* 广告 */
.ad-box{
  margin-top: 30rpx;
  width:100%;
  text-align: center;
}
.image-ad{
  width:95%;
  height: 370rpx;
}
/* 菜品项列表 */
.bottom-pic{
  margin-top: 40rpx;
  display: flex;
  width:100%;
  padding: 0 20rpx;
  flex-wrap: wrap;
  justify-content: space-between;
  box-sizing: border-box;
}
.bottom-pic{
  width:49%;
  display: inline-block;
}
.bottom-image{
  width:100%;
  height: 170rpx;
}